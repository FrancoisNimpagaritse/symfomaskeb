{% extends 'base.html.twig' %}

{% block title %}Maskeb &mdash; Nous contacter{% endblock %}

{% block body %}
    <div class="container">
    {% for label, messages in app.flashes %}
        <div class="container">
            <div class="alert alert-{{label}}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
        <div class="row">
            <div class="col-12 text-center mb-1">
                <h2 class="text-black section-title text-uppercase">Nous contacter</h2>
            </div>    
        </div>        
        <div class="row justify-content-center">        
            <div class="col-lg-6 mb-5">
                {{form_start(form)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-primary btn-block text-white py-3 px-5">Envoyer</button>
                {{form_end(form)}}
            </div>
        </div>
    </div>
    
{% endblock %}