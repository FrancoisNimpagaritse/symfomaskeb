{% extends 'admin/base.html.twig' %}

{% block title %}Page de Profil {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">        
        <div class="col-md-6 col-md-offset-3 text-center" style="background:#8b8e94; border-radius:7px; color:white;">
            <h3>{{user.firstname}} {{user.lastname}}</h3>            
            <hr>
            {% if user is same as (app.user) %}
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mon profil</a>                    
                    <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2">Modifier mon mot de passe</a>
                    <hr>
                </hr>
            {% endif %}
        </div>        
    </div>
</div>
{% endblock %}
