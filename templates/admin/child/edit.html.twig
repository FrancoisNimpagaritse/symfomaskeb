{% extends 'admin/base.html.twig' %}

{% block title %}Edition enfant{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center" style="background:#578ec9; border-radius:5px; color:white;">   
                <h4>Modification d'un enfant : {{kid.firstname}} {{kid.lastname}}</h4>
            </div>         
        </div>
        <br>
        <div>
            <div class="col-md-6">
                {{form_start(form)}}
                <img src="{{asset('/visitor_asset/images/enfants/' ~ kid.photo)}}" style="height:300px; width:270px; border-radius:10px;">
                <hr>
                {{ form_row(form.imageFile)}}
                {{form_widget(form)}}
                <button type="submit" class="btn btn-success">Enregister modifications</button>
                {{form_end(form)}}
            </div>  
        </div>   
    </div>
{% endblock %}