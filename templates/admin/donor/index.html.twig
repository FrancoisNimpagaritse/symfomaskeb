{% extends 'admin/base.html.twig' %}

{% block title %}Administration des donateurs!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2>Gestion des donateurs</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>Téléphones</th>
                <th>Adresse email</th>
                <th>Date inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for donor in donors %}
            <tr>
                <td>{{donor.id}}</td>
                <td>{{donor.name}}</td>
                <td>{{donor.type}}</td>
                <td>{{donor.adresse}}</td>
                <td>{{donor.phone}}</td>
                <td>{{donor.email}}</td>
                <td>{{donor.datejoined |date("d/m/Y")}}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
