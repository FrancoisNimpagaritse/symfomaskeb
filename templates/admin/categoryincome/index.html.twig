{% extends 'admin/base.html.twig' %}

{% block title %}Administration des categories de ressources{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2>Gestion des catégorie de ressources</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Appellation de la catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cat in catIncomes %}
            <tr>
                <td>{{cat.id}}</td>
                <td>{{cat.name}}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
