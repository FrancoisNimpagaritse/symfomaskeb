{% extends 'admin/base.html.twig' %}

{% block title %}Administration des recettes{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2>Gestion des recettes</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date reçu</th>
                <th>Montant(&euro;)</th>
                <th>Libellé</th>
                <th>Catégorie</th>
                <th>Contribuable</th>
                <th>Saisi par</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for inc in incomes %}
            <tr>
                <td>{{inc.id}}</td>
                <td>{{inc.dateIncome | date("d/m/Y")}}</td>
                <td>{{inc.amount}}</td>
                <td>{{inc.description}}</td>
                <td>{{inc.categoryIncome.name}}</td>
                <td>{{inc.donor.name}}</td>
                <td>{{inc.editor.lastname}} {{inc.editor.firstname}}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
